/* pages/category/index.wxss */
page {
  height: 100%;
}

.cates {
  height: 100%;
}

.cates .cates_container {
  height: calc(100vh - 75rpx);
  display: flex;
}

/* 左边 */
.cates .cates_container .left_menu {
  flex: 2;
}


.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.active {
  color:var(--themeColor);
  border-left: 5rpx solid currentColor;
}

/* 右边 */
.cates .cates_container .right_menu {
  flex: 5;
}

.cates .cates_container .right_menu .goods_group {}


.right_menu .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.right_menu .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}

.right_menu .goods_group .goods_title .title {}


.right_menu .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}

.right_menu .goods_group .goods_list navigator {
  width: 33.33%;
  text-align: center;
}

.right_menu .goods_group .goods_list navigator image {
  width: 50%;
}

.right_menu .goods_group .goods_list navigator .goods_name {}